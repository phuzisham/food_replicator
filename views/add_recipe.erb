<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <h3>Add New Recipe</h3>

      <form action="/create_recipe" method="post">
        <div class="form-group">
          <label for="title" class="form-label">Title your recipe:</label>
          <input type="text" name="title" class="form-control" id="title" required>
          <label for="instructions" class="form-label">Add instructions for your recipe:</label>
          <input type="text" name="instructions" class="form-control" id="instructions" required>
          <button type="submit" class="button btn">Add Recipe</button>
        </div>
      </form>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <% if @recipes.any?() %>
      <h3>Here are your recipes:</h3>

      <ul>
        <% @recipes.each() do |recipe| %>
          <li><a href="/recipe/<%= recipe.id() %>"><%= recipe.title() %></a> </li>
        <% end %>
      </ul>

    <% else %>

        <p>There are no recipes yet!</p>

    <% end %>
    <a href="/"><button class="btn">Return To Homepage</a>
    </div>
  </div>
</div>
